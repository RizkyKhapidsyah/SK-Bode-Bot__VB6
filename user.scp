Function GetNextToken(ByRef szTemp, ByVal szTok)
    Dim Y 
    Y = InStr(1, szTemp, szTok)
    If Y <> 0 Then
        GetNextToken = Left(szTemp, Y - 1)
        szTemp = Mid(szTemp, Y + 1)
    Else
        GetNextToken = szTemp
    End If
End Function
